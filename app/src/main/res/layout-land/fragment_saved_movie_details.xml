<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/details_saved_movie_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/rating_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/details_saved_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/details_saved_movie_title"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/details_saved_movie_release_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/release_year_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_saved_movie_title"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/details_saved_movie_poster"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/movies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/details_saved_movie_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/category_hint"
        app:layout_constraintLeft_toRightOf="@id/details_saved_movie_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/details_saved_movie_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/director_hint"
        app:layout_constraintLeft_toRightOf="@id/details_saved_movie_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_saved_movie_category"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/details_saved_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/title_hint"
        app:layout_constraintLeft_toRightOf="@id/details_saved_movie_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_saved_movie_director"
        app:layout_constraintWidth_percent="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>